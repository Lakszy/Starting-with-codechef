#include <iostream>
using namespace std;

int cs(int n,int qb[]){
     if(n==0){
    return 1;
   }else if(n<0){
    return 0;
   }
   
    if(qb[n]>0){
        return qb[n];
    }
   
 
int x=cs(n-1,qb);
int y=cs(n-2,qb);
int z=cs(n-3,qb);
int q=x+y+z;

 qb[n]=q;
    
    return q;
  
}

int main(){
    int n;
    cin>>n;
    cout<<cs(n,new int [n+1])<<endl;
}
